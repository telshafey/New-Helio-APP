{
  "expo": {
    "name": "HelioApp",
    "slug": "helio-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./apps/mobile/assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./apps/mobile/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.helio.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "يحتاج التطبيق إلى الوصول إلى معرض الصور الخاص بك",
        "NSCameraUsageDescription": "يحتاج التطبيق إلى الوصول إلى الكاميرا"
      }
    },
    "android": {
      "package": "com.helio.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./apps/mobile/assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "favicon": "./apps/mobile/assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "يحتاج التطبيق إلى الوصول إلى معرض الصور الخاص بك للسماح لك باختيار الصور.",
          "cameraPermission": "يحتاج التطبيق إلى الوصول إلى الكاميرا للسماح لك بالتقاط الصور."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera."
        }
      ]
    ]
  }
}