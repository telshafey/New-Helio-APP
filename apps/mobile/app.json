{
  "expo": {
    "name": "HelioApp",
    "slug": "helio-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "يحتاج التطبيق إلى الوصول إلى معرض الصور الخاص بك للسماح لك باختيار الصور.",
          "cameraPermission": "يحتاج التطبيق إلى الوصول إلى الكاميرا للسماح لك بالتقاط الصور."
        }
      ]
    ]
  }
}
